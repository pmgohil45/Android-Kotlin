<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ThoughtsAdmin" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- system top navigation bar and system bottom navigation bar color-->
        <item name="android:colorPrimaryDark">@color/transparent</item><!-- Status bar color -->
        <item name="android:navigationBarColor">@color/transparent
        </item><!-- Navigation bar color -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:colorBackground">@color/opal</item><!-- Load app background color -->
        <item name="android:windowBackground">@color/light_sky_blue
        </item><!-- App background color -->
        <item name="android:colorPrimary">@color/transparent
        </item><!-- Action bar background color -->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:textColorPrimary">@color/black
        </item><!-- Text Color of Action bar color -->
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_slab_bold</item>
    </style>
    <style name="Theme.Thoughts" parent="Base.Theme.ThoughtsAdmin">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_slab_bold</item>
    </style>

</resources>