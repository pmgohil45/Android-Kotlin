<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="I'd"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/etNm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Name"
        app:layout_constraintTop_toBottomOf="@+id/etId"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/etMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Mail"
        app:layout_constraintTop_toBottomOf="@+id/etNm"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/ins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert"
        app:layout_constraintTop_toBottomOf="@+id/etMail" />

    <Button
        android:id="@+id/sel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select"
        app:layout_constraintTop_toBottomOf="@id/ins" />

    <Button
        android:id="@+id/upd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        app:layout_constraintTop_toBottomOf="@id/sel" />

    <Button
        android:id="@+id/del"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintTop_toBottomOf="@id/upd" />

    <TextView
        android:id="@+id/SelTvId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/del"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/SelTvNm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/SelTvId"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/SelTvMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/SelTvNm"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>