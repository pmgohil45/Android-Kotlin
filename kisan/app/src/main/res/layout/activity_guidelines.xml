<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_inner_bg_color"
    tools:context=".guidelines">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            // 1st textView

            <androidx.cardview.widget.CardView
                android:id="@+id/cardResurved"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/resurvedCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_inner_button_color">

                    <TextView
                        android:id="@+id/resurved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="20dp"
                        android:paddingEnd="160dp"
                        android:text="Resurved Operational Guidelines"
                        android:textColor="#000000"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/h1" />

                    <ImageView
                        android:id="@+id/h1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:padding="20dp"
                        android:src="@drawable/heand"
                        app:layout_constraintBottom_toBottomOf="@+id/resurved"
                        app:layout_constraintTop_toTopOf="@+id/resurved" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            // 2nd textView

            <androidx.cardview.widget.CardView
                android:id="@+id/cardFinanc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/financCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_inner_button_color">

                    <TextView
                        android:id="@+id/financ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="20dp"
                        android:paddingEnd="160dp"
                        android:text="Financing Facility Under  &#38;  Agriculture Infrastructure Found"
                        android:textColor="#000000"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/h2" />

                    <ImageView
                        android:id="@+id/h2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:padding="20dp"
                        android:src="@drawable/heand"
                        app:layout_constraintBottom_toBottomOf="@+id/financ"
                        app:layout_constraintTop_toTopOf="@+id/financ" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/ads1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-8269045129205865/9621054821" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>