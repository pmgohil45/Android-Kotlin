<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal state -->
    <item tools:ignore="StateListReachable">
        <shape tools:ignore="StateListReachable">
            <!-- Gradient background -->
            <gradient
                android:startColor="#FF5722"
                android:endColor="#E64A19"
                android:angle="90"/>

            <!-- Rounded corners -->
            <corners android:radius="100dp"/>

            <!-- Padding -->
            <padding
                android:left="16dp"
                android:top="16dp"
                android:right="16dp"
                android:bottom="16dp"/>

        </shape>
    </item>
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <!-- Gradient background -->
            <gradient
                android:startColor="#E64A19"
                android:endColor="#D84315"
                android:angle="90"/>

            <!-- Rounded corners -->
            <corners android:radius="100dp"/>

            <!-- Padding -->
            <padding
                android:left="16dp"
                android:top="16dp"
                android:right="16dp"
                android:bottom="16dp"/>

        </shape>
    </item>
</selector>