        <!-- Song List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/songRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:padding="16dp" />

        <!-- Playback Controls -->
        <LinearLayout
            android:id="@+id/playbackControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/control_background_color"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/albumArtwork"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/album_artwork_description"
                android:src="@drawable/album_cover_placeholder" />

            <TextView
                android:id="@+id/songTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/now_playing"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/previousButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/previous_button_description"
                android:src="@drawable/ic_previous" />

            <ImageButton
                android:id="@+id/playPauseButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/play_pause_button_description"
                android:src="@drawable/ic_play" />

            <ImageButton
                android:id="@+id/nextButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/next_button_description"
                android:src="@drawable/ic_next" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>