<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_bg_color"
    tools:context=".sad">

    <androidx.cardview.widget.CardView
        android:id="@+id/geetanjaliCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/geetanjaliTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/custom_card_color"
            android:fontFamily="@font/alike_angular"
            android:gravity="center"
            android:padding="8dp"
            android:text="Students of Geetanjali"
            android:textColor="@color/custom_text_color"
            android:textSize="25dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/materialCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/geetanjaliCard"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/materialConst"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/custom_card_color">

            <TextView
                android:id="@+id/materialTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amiri"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Material"
                android:textColor="@color/custom_text_color"
                android:textSize="30dp" />

            <Button
                android:id="@+id/materialViewBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/custom_inner_btn_color"
                android:text="Download"
                android:textColor="@color/custom_text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialTxt" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/assignmentCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/materialCard"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/assignmentConst"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/custom_card_color">

            <TextView
                android:id="@+id/assignmentTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amiri"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Assignment"
                android:textColor="@color/custom_text_color"
                android:textSize="30dp" />

            <Button
                android:id="@+id/questionViewBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/custom_inner_btn_color"
                android:text="Question"
                android:textColor="@color/custom_text_color"
                app:layout_constraintEnd_toStartOf="@+id/answerViewBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/assignmentTxt" />

            <Button
                android:id="@+id/answerViewBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/custom_inner_btn_color"
                android:text="Answer"
                android:textColor="@color/custom_text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/questionViewBtn"
                app:layout_constraintTop_toBottomOf="@+id/assignmentTxt" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/footerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/footerTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/custom_footer_card"
            android:fontFamily="@font/amita"
            android:gravity="center"
            android:text="Manage by : Pm Gohil"
            android:textColor="@color/custom_footer_text"
            android:textSize="15dp" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>